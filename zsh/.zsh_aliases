# misc
alias i="ipython3"
alias h="cd ~"
alias vim="nvim"
alias c="clear"

# give me more info with ls
alias ls="ls -a --color"

# aliases for editing and sourcing configuration files
alias vz="vim ~/.zshrc"
alias vt="vim ~/.tmux.conf"
alias va="vim ~/.zsh_aliases"
alias vnv="cd ~/.config/nvim/ && vim ~/.config/nvim/lua/custom/plugins.lua"
alias sz="source ~/.zshrc"

# tmux aliases
alias st="tmux source ~/.tmux.conf"
alias tks="tmux kill-session"
alias tls="tmux ls"
alias tat="tmux attach -t"
alias tst="tmux switch-client -t"
alias tns="tmux new-session -s"
